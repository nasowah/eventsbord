<div class="row">
  <div class="col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2><%= @event.name %></h2>
      </div>
      <div class="thumbnail">
        <%= image_tag @event.image.url(), class: "img-responsive" %>
      </div>    
      <div class="panel-body">
        <div class="panel panel-info">
          <div class="panel-heading">
            <h3><%= "Starts: #{@event.start_date.to_formatted_s(:long)}" %></h3>
            <h4><%= "Ends: #{@event.end_date.to_formatted_s(:long)}" %></h4>
            <h4><%= "Price: #{number_to_currency(@event.price)}" %></h4>
          </div>
        </div>
        <h2>Description:</h2>
        <p><%= @event.description %></p>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title center">Organizer, Contact &amp; Venue</h3>
      </div>
      <div class="panel-body center">
        <h3><%= @event.organizer %></h3>
        <h4><%= @event.phone %></h4>
        <h4><%= @event.venue %></h4>
      </div>
    </div>
  </div>
</div>
<% if current_user == @event.user %>
  <%= link_to 'Edit', edit_event_path(@event), class: "btn btn-link" %> |
<% end %>
<%= link_to 'Back', events_path, class: "btn btn-link" %>