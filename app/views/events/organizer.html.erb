<table class="table table-striped table-bordered">
  <tr>
    <th class="center">Image</th>
    <th class="center">Title</th>
    <th class="center">Description</th>
    <th class="center">Venue</th>
    <th class="center">Start Date</th>
    <th class="center">End Date</th>
    <th class="center">Price</th>
    <th class="center">Registrants</th>
    <th class="center">Actions</th>
  </tr>
  <% @events.each do |event| %>
    <tr>
      <td><%= link_to image_tag(event.image.url(:thumb)), event %></td>
      <td><%= event.name %></td>
      <td><%= event.description %></td>
      <td><%= event.venue %></td>
      <td><%= event.start_date %></td>
      <td><%= event.end_date %></td>
      <td><%= number_to_currency(event.price) %></td>
      <td><%= link_to event.registrants.size, event_registrants_path(event) %></td>
      <td>
      <div class="btn-group">
        <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown">
          Actions <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" role="menu">
          <li><%= link_to 'View', event %></li>
          <li><%= link_to 'Edit', edit_event_path(event) %></li>
          <li><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></li>
        </ul>
      </div>
      </td>
    </tr>
  <% end %>
</table>
<br>
<% if user_signed_in? %>
  <%= link_to 'New Event', new_event_path %>
<% end %>
