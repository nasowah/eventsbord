<div class="row">
  <div class="col-md-8 col-md-offset-2 well">
  <%= form_for(@event, :html => { :multipart => true }) do |f| %>
      <% if @event.errors.any? %>
        <div id="error_explanation", class="alert alert-danger alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          <h4><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h4>
    
          <ul>
          <% @event.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
    
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :venue %>
        <%= f.text_field :venue, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :start_date %>
        <%= f.datetime_select :start_date, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :end_date %>
        <%= f.datetime_select :end_date, class: "form-control" %>
      </div> 
      <div class="form-group">
        <%= f.label :image, "Upload Event Image" %>
        <%= f.file_field :image, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :price %>
        <%= f.text_field :price, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :organizer %>
        <%= f.text_field :organizer, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :phone %>
        <%= f.text_field :phone, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit class: "btn btn-primary" %>
      </div>
    <% end %>
    </div>
</div>
