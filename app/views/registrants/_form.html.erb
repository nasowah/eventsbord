<%= form_for([@event, @registrant]) do |f| %>
  <% if @registrant.errors.any? %>
    <div id="error_explanation", class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@registrant.errors.count, "error") %> prohibited this registrant from being saved:</h4>

      <ul>
      <% @registrant.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :first_name %>
    <%= f.text_field :first_name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :last_name %>
    <%= f.text_field :last_name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :mobile %>
    <%= f.text_field :mobile, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :ticket %>
    <%= f.number_field :ticket, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "Order Ticket", class: "btn btn-success btn-lg" %>
  </div>
<% end %>
